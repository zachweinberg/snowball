{
  "extends": "tsconfig/base.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strictNullChecks": false,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "baseUrl": "./",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
