{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "noImplicitAny": false,
    "useUnknownInCatchVariables": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "strict": false
  }
}
